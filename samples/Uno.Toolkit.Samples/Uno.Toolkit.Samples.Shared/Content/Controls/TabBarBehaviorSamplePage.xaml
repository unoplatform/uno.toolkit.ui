	<Page.Resources>
		<Style x:Key="TabBarWithSlideIndicatorStyle"
			   TargetType="toolkit:TabBar">
			<Setter Property="IsTabStop"
					Value="False" />
			<Setter Property="Height"
					Value="{StaticResource TabBarHeight}" />
			<Setter Property="ItemsPanel">
				<Setter.Value>
					<ItemsPanelTemplate>
						<toolkit:TabBarListPanel />
					</ItemsPanelTemplate>
				</Setter.Value>
			</Setter>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="toolkit:TabBar">
						<Grid x:Name="TabBarGrid"
							  Background="{TemplateBinding Background}"
							  BorderBrush="{TemplateBinding BorderBrush}"
							  BorderThickness="{TemplateBinding BorderThickness}"
							  Height="{TemplateBinding Height}">
							<ItemsPresenter Padding="{TemplateBinding Padding}" />
							<toolkit:TabBarSelectionIndicatorPresenter Owner="{Binding RelativeSource={RelativeSource TemplatedParent}}"
																 IndicatorTransitionMode="Slide"
																 Opacity="0">
								<Rectangle Fill="Purple"
										   x:Name="TestingRect"
										   AutomationProperties.AutomationId="TestingRect"
										   Height="5"
										   Width="30" />
							</toolkit:TabBarSelectionIndicatorPresenter>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="TabBarWithSnapIndicatorStyle"
