												Value="{ThemeResource CupertinoSlidingSegmentedControlItemBackgroundSelectedPressed}" />
										<Setter Target="Icon.Foreground"
												Value="{ThemeResource CupertinoSlidingSegmentedControlItemForegroundSelectedPressed}" />
