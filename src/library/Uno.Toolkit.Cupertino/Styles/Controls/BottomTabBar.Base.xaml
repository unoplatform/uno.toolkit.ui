<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:toolkitlib="using:Uno.Toolkit.UI.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ToolkitResources xmlns="using:Uno.Toolkit.UI" />
        <CupertinoColors xmlns="using:Uno.Cupertino" />
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <Color x:Key="CupertinoInactiveColor">#757575</Color>
                    <Color x:Key="CupertinoTabBarBackgroundColor">#F0161616</Color>
                    <Color x:Key="CupertinoTabBarBorderColor">#29000000</Color>

                    <StaticResource x:Key="CupertinoTabBarBackground"
									ResourceKey="CupertinoTabBarBackgroundBrush" />

                    <StaticResource x:Key="TabBarItemBackground"
									ResourceKey="SystemControlTransparentBrush" />
                    <StaticResource x:Key="TabBarItemBackgroundPointerOver"
									ResourceKey="SystemControlTransparentBrush" />
                    <StaticResource x:Key="TabBarItemBackgroundPressed"
									ResourceKey="SystemControlTransparentBrush" />
                    <StaticResource x:Key="TabBarItemBackgroundSelected"
									ResourceKey="SystemControlTransparentBrush" />
                    <StaticResource x:Key="TabBarItemBackgroundSelectedPointerOver"
									ResourceKey="SystemControlTransparentBrush" />
                    <StaticResource x:Key="TabBarItemBackgroundSelectedPressed"
									ResourceKey="SystemControlTransparentBrush" />

                    <StaticResource x:Key="TabBarItemForeground"
									ResourceKey="CupertinoInactiveBrush" />
                    <StaticResource x:Key="TabBarItemForegroundPointerOver"
									ResourceKey="CupertinoInactiveBrush" />
                    <StaticResource x:Key="TabBarItemForegroundPressed"
									ResourceKey="CupertinoInactiveBrush" />
                    <StaticResource x:Key="TabBarItemForegroundDisabled"
									ResourceKey="SystemControlDisabledBaseMediumLowBrush" />
                    <StaticResource x:Key="TabBarItemForegroundSelected"
									ResourceKey="CupertinoBlueBrush" />
                    <StaticResource x:Key="TabBarItemForegroundSelectedPointerOver"
									ResourceKey="CupertinoBlueBrush" />
                    <StaticResource x:Key="TabBarItemForegroundSelectedPressed"
									ResourceKey="CupertinoBlueBrush" />

                    <StaticResource x:Key="TabBarItemBorderBrush"
									ResourceKey="SystemControlTransparentBrush" />
                </ResourceDictionary>

                <ResourceDictionary x:Key="Light">
                    <Color x:Key="CupertinoInactiveColor">#999999</Color>
                    <Color x:Key="CupertinoTabBarBackgroundColor">#F0F9F9F9</Color>
                    <Color x:Key="CupertinoTabBarBorderColor">#4C000000</Color>

                    <StaticResource x:Key="CupertinoTabBarBackground"
									ResourceKey="CupertinoTabBarBackgroundBrush" />

                    <StaticResource x:Key="TabBarItemBackground"
									ResourceKey="SystemControlTransparentBrush" />
                    <StaticResource x:Key="TabBarItemBackgroundPointerOver"
									ResourceKey="SystemControlTransparentBrush" />
                    <StaticResource x:Key="TabBarItemBackgroundPressed"
									ResourceKey="SystemControlTransparentBrush" />
                    <StaticResource x:Key="TabBarItemBackgroundSelected"
									ResourceKey="SystemControlTransparentBrush" />
                    <StaticResource x:Key="TabBarItemBackgroundSelectedPointerOver"
									ResourceKey="SystemControlTransparentBrush" />
                    <StaticResource x:Key="TabBarItemBackgroundSelectedPressed"
									ResourceKey="SystemControlTransparentBrush" />

                    <StaticResource x:Key="TabBarItemForeground"
									ResourceKey="CupertinoInactiveBrush" />
                    <StaticResource x:Key="TabBarItemForegroundPointerOver"
									ResourceKey="CupertinoInactiveBrush" />
                    <StaticResource x:Key="TabBarItemForegroundPressed"
									ResourceKey="CupertinoInactiveBrush" />
                    <StaticResource x:Key="TabBarItemForegroundDisabled"
									ResourceKey="SystemControlDisabledBaseMediumLowBrush" />
                    <StaticResource x:Key="TabBarItemForegroundSelected"
									ResourceKey="CupertinoBlueBrush" />
                    <StaticResource x:Key="TabBarItemForegroundSelectedPointerOver"
									ResourceKey="CupertinoBlueBrush" />
                    <StaticResource x:Key="TabBarItemForegroundSelectedPressed"
									ResourceKey="CupertinoBlueBrush" />

                    <StaticResource x:Key="TabBarItemBorderBrush"
									ResourceKey="SystemControlTransparentBrush" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="CupertinoInactiveBrush"
					 Color="{ThemeResource CupertinoInactiveColor}" />
    <SolidColorBrush x:Key="CupertinoTabBarBackgroundBrush"
					 Color="{ThemeResource CupertinoTabBarBackgroundColor}" />
    <SolidColorBrush x:Key="CupertinoTabBarBorderBrush"
					 Color="{ThemeResource CupertinoTabBarBorderColor}" />
    <x:Double x:Key="CupertinoTabBarFontSize">12</x:Double>
    <FontFamily x:Key="CupertinoTabBarFontFamily">SF Pro</FontFamily>
    <x:Double x:Key="TabBarHeight">64</x:Double>
    <x:Double x:Key="TabBarItemIconHeight">22</x:Double>
    <x:Double x:Key="TabBarItemIconWidth">22</x:Double>
    <Thickness x:Key="TabBarItemContentMargin">0,0,0,12</Thickness>
    <Thickness x:Key="TabBarItemContentOnlyMargin">12,0</Thickness>


</ResourceDictionary>
